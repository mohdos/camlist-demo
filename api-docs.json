{
    "openapi": "3.0.1",
    "info": {
        "title": "Camlist Pet store API Docs",
        "description": "Backend APIs for the Camlist Pet store Demo",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:4000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "Camlist Pets",
            "description": "Backend APIs for the Camlist Pet store"
        }
    ],
    "paths": {
        "/pets/{petId}/bids": {
            "post": {
                "tags": [
                    "Camlist Pets"
                ],
                "summary": "Adds a bid for a certain pet",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user-id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 2
                    },
                    {
                        "in": "path",
                        "name": "petId",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 2
                    }
                ],
                "requestBody": {
                    "description": "Bidding for pet",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "bid": {
                                        "type": "integer",
                                        "example": 150
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Created bid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "type": "object",
                                            "allOf": [
                                                {
                                                    "$ref": "#/components/schemas/BidModel"
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "pet": {
                                                            "type": "object",
                                                            "properties": {
                                                                "id": {
                                                                    "type": "integer"
                                                                }
                                                            }
                                                        },
                                                        "bidder": {
                                                            "type": "object",
                                                            "properties": {
                                                                "id": {
                                                                    "type": "integer"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            },
            "get": {
                "tags": [
                    "Camlist Pets"
                ],
                "summary": "List bids for a certain pet",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user-id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 2
                    },
                    {
                        "in": "path",
                        "name": "petId",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 2
                    },
                    {
                        "in": "query",
                        "name": "limit",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 10
                    },
                    {
                        "in": "query",
                        "name": "page",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of bids",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "allOf": [
                                                    {
                                                        "$ref": "#/components/schemas/BidModel"
                                                    },
                                                    {
                                                        "type": "object",
                                                        "properties": {
                                                            "bidder": {
                                                                "$ref": "#/components/schemas/UserModel"
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        },

        "/pets/{petId}/winners": {
            "get": {
                "tags": [
                    "Camlist Pets"
                ],
                "summary": "List bid winners as per generalized second price auction",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user-id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 2
                    },
                    {
                        "in": "path",
                        "name": "petId",
                        "schema": {
                            "type": "integer"
                        },
                        "required": false,
                        "example": 2
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of bid winners",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/WinnersModel"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "BidModel": {
                "type": "object",
                "properties": {
                    "bid": {
                        "type": "integer",
                        "example": 200
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date"
                    }
                }
            },
            "UserModel": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "email": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "status": {
                        "type": "integer"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date"
                    }
                }
            },
            "WinnersModel": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "Paid in USD": {
                        "type": "integer"
                    }
                }
            },
            "NotFoundError": {
                "type": "object",
                "properties": {
                    "responseCode": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "code": {
                        "type": "integer"
                    }
                }
            }
        },
        "responses": {
            "NotFound": {
                "description": "Not Found",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/NotFoundError"
                        }
                    }
                }
            }
        }
    }
}